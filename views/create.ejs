<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header') -%>
<body>
  <%- include('layouts/navbar') -%>

    <div class="container-main card p-5 mt-3 mb-5">
        <h1 class="display-4 mb-5">Create A Post</h1>

      <form class="mt-3" action="/posts/store" method="POST">
          <!-- Name input -->
          <div class="form-outline mb-4">
            <input type="text" required name="title" id="title" class="form-control" />
            <label class="form-label">Post Title</label>
          </div>

          <!-- Name input -->
          <div class="form-outline mb-4">
            <input type="email" required name="email" id="email" class="form-control" />
            <label class="form-label">Email</label>
          </div>

          <!-- Name input -->
          <div class="form-outline mb-4">
            <input type="text" required name="username" id="username" class="form-control" />
            <label class="form-label">UserName</label>
          </div>

          <!-- Message input -->
          <div class="form-outline mb-4">
            <textarea class="form-control" spellcheck="true" max-length="315" required name="body" id="body" rows="4"></textarea>
            <label class="form-label">Message</label>
          </div>
        
          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
      </form>

    </div>
  <%- include('layouts/footer') -%>
</body>
<!-- MDB -->
<%- include('layouts/scripts') -%>
</html>